extend layout
block content
	h2 Input New Product
	form(name="new-product", action="/products/new", method="post")
		div.input
			span.label Title
			input(type="text", name="title", required, autofocus)
		div.input
			span.label Author
			input(type="text", name="author")
		div.input
			span.label Description
			textarea(name="description", cols="40", rows="5", required)
		div.input
			span.label Condition
			select(name="condition", required)
				option(value='------') --------------------
				option(value='New / Like New') New / Like New
				option(value='Excellent') Excellent
				option(value='Good') Good
				option(value='Fair') Fair
				option(value='Poor') Poor
				option(value='Damaged') Damaged
		div.input
			span.label ISBN
			input(type="text", name="isbn")
		div.input
			span.label Price
			input(type="text", name="price")
		div.input Location
			br
			span.label Row
			select(name="row", required)
				option(value="--") --
				option(value="A") A
				option(value="B") B
				option(value="C") C
			span.label Stack
			select(name="stack", required)
				option(value="--") --
				option(value="1") 1
				option(value="2") 2
			span.label Box
			select(name="box", required)
				option(value="--") --
				option(value="1") 1
				option(value="2") 2
				option(value="3") 3
				option(value="4") 4
				option(value="5") 5
				option(value="6") 6
				option(value="7") 7
				option(value="8") 8
		div.input
			span.label For Sale?
			select(name="forSale", required)
				option(value="true") Yes, This is for sale
				option(value="false") No, this is not for sale
		div.input
			span.label Notes (not visible to customer)
			textarea(name="notes", cols="70", rows="10")

		div.actions
			input(type="submit", value="SUBMIT")