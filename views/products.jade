extend layout
block content
	h2 #{products.pageTitle}
	.container
		ul
			each product, i in products
				li.product-wrapper
					a(href= '#{product._id}')
						img.productThumb(src='http://covers.openlibrary.org/b/isbn/'+ product.isbn + '.jpg')
						p.title Title: #{product.title}
						p.author Author: #{product.author}
						p.isbn ISBN: #{product.isbn}
						p.description description: #{product.description}
						p.condition condition: #{product.condition}
						//- .notes notes: #{product.notes}
						p.location location: #{product.row} #{product.stack} #{product.box}
						p.price Price #{product.price}
