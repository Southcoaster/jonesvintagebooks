extend layout
block content
	h2 #{products.pageTitle}
	.container
		ul
			each product, i in products
				li.product-wrapper
					a(href= '#{product._id}')
						if product.isbn
							img.productThumb(src='http://covers.openlibrary.org/b/isbn/'+ product.isbn + '.jpg')
						else
							img.productThumb(src='/img/generic-cover.png')
						div.product-info-wrapper
							div.input
								span.label Title: 
								span.sublabel #{product.title}
							div.label Author: 
								span.sublabel #{product.author}
							div.isbn ISBN:  
								span.sublabel #{product.isbn}
							div.description Description: 
								span.sublabel #{product.description}
							div.condition Condition: 
								span.sublabel #{product.condition}
							//- .notes notes: #{product.notes}
							//- p.location location: #{product.row} #{product.stack} #{product.box}
							div.price Price #{product.price}
