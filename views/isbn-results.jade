extend layout
block content
	h2 ISBN Lookup
	.container 
		.title #{title}
		form(name='new-product-isbn', action="/products/new", method="post")
			p.title Title: #{products.data[0].title_long}
			p.author Authors: #{products.data[0].author_data[0].name}
			p.description description: #{products.data[0].summary}
			div.input
			span.label Condition
			select(name="condition", required)
				option(value='------') --------------------
				option(value='New / Like New') New / Like New
				option(value='Excellent') Excellent
				option(value='Good') Good
				option(value='Fair') Fair
				option(value='Poor') Poor
				option(value='Damaged') Damaged
			div.input Location
			br
			span.label Row
			select(name="row", required)
				option(value="--") --
				option(value="A") A
				option(value="B") B
				option(value="C") C
			span.label Stack
			select(name="stack", required)
				option(value="--") --
				option(value="1") 1
				option(value="2") 2
			span.label Box
			select(name="box", required)
				option(value="--") --
				option(value="1") 1
				option(value="2") 2
				option(value="3") 3
				option(value="4") 4
				option(value="5") 5
				option(value="6") 6
				option(value="7") 7
				option(value="8") 8
			//-p.price Price #{product.price}
			div.input
			span.label For Sale?
			select(name="forSale", required)
				option(value="true") Yes, This is for sale
				option(value="false") No, this is not for sale
			div.input
				span.label Notes (not visible to customer)
				textarea(name="notes", cols="70", rows="10")
			div.actions
				input(type="submit", value="SUBMIT")